{
    "name": "webignition/string-parser",
    "description": "Abstract state-based string parser",
    "keywords": ["string", "parser"],
    "homepage": "https://github.com/webignition/string-parser",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Jon Cram",
            "email": "jon@webignition.net"
        }
    ],
    "scripts": {
        "cs-fixer-dry-run": "./vendor/bin/php-cs-fixer fix --dry-run --verbose --show-progress none",
        "cs-fixer-fix": "./vendor/bin/php-cs-fixer fix --diff",
        "cs-phpcs": "./vendor/bin/phpcs",
        "static-analysis": "./vendor/bin/phpstan analyse src tests --level=7",
        "test": "./vendor/bin/phpunit --colors=always",
        "ci": [
            "@composer cs",
            "@composer static-analysis",
            "@composer test"
        ]
    },
    "autoload": {
        "psr-4": {
            "webignition\\StringParser\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "webignition\\StringParser\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": ">=8"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.2",
        "phpstan/phpstan": "^0.12.99",
        "phpunit/phpunit": "^9.5",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "minimum-stability":"stable",
    "prefer-stable":true,
    "config": {
        "sort-packages": true
    }
}
